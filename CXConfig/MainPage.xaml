        <StackLayout Padding="20" VerticalOptions="Center" Grid.Column="1">
            <!-- Title -->
            <Label Text="Custom ComboBox Example"
                   FontSize="20"
                   HorizontalOptions="Center" />

            <!-- ComboBox Frame -->
            <Frame x:Name="ComboBoxFrame"
                   BackgroundColor="LightGray"
                   BorderColor="Gray"
                   CornerRadius="5"
                   Padding="5"
                   HeightRequest="40"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Label x:Name="ComboBoxLabel"
                       Text="Select an Option"
                       VerticalTextAlignment="Center"
                       HorizontalOptions="Center" />
            </Frame>

            <!-- Dropdown ListView -->
            <ListView x:Name="ComboBoxListView"
                      IsVisible="False"
                      BackgroundColor="White"
                      HeightRequest="150"
                      ItemsSource="{Binding ComboBoxItems}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Selected Item Label -->
            <Label x:Name="SelectedLabel"
                   Text="Selected: None"
                   FontSize="16"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </StackLayout>
